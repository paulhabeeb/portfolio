{
    "name": "portfolio",
    "version": "2.0.0",
    "private": true,
    "description": "Portfolio",
    "author": "Paul Habeeb",
    "scripts": {
        "dev": "next dev",
        "build": "next build",
        "start": "next start",
        "lint": "next lint",
        "release": "dotenv -e .env.local release-it"
    },
    "dependencies": {
        "@prismicio/client": "^6.7.3",
        "@prismicio/react": "^2.5.2",
        "classnames": "^2.3.2",
        "next": "^13.2.4",
        "next-seo": "^5.15.0",
        "prop-types": "^15.8.1",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-helmet": "^6.1.0"
    },
    "devDependencies": {
        "dotenv-cli": "^7.1.0",
        "eslint": "^8.36.0",
        "eslint-config-next": "^13.2.4",
        "eslint-config-prettier": "^8.8.0",
        "sass": "^1.59.3"
    },
    "release-it": {
        "git": {
            "changelog": "npx auto-changelog --stdout --commit-limit false --unreleased --template https://raw.githubusercontent.com/release-it/release-it/master/templates/changelog-compact.hbs",
            "commitMessage": "Releasing v${version}",
            "tagName": "v${version}"
        },
        "github": {
            "release": true,
            "releaseName": "v${version}",
            "tokenRef": "GITHUB_TOKEN"
        },
        "hooks": {
            "after:bump": "npx auto-changelog -p --template changelog-template.hbs --ignore-commit-pattern \"^(Releasing v.*)\""
        },
        "npm": {
            "publish": false
        }
    }
}
